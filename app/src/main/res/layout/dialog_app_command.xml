<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_update_dialog"
    android:layout_centerInParent="true"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_command_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#020202"
        android:gravity="center"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cacaca"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_app_command_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_alipay_cancel"
            android:gravity="center"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#cacaca"/>
        <TextView
            android:id="@+id/tv_app_command_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:background="@drawable/shape_alipay_confirm"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>