<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:background="@drawable/shape_white_4"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_command_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="验证码不正确，请重新输入"
            android:textColor="@color/c_999999"
            android:textSize="18sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/c_dddddd"/>

    <TextView
        android:id="@+id/dialog_command_confirm"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="知道了"
        android:textColor="@color/c_04cafa"
        android:textSize="18sp"/>

    <!--android:textColor="@drawable/selector_command_confirm_test"-->
    <!--android:background="@drawable/bg_command_confirm_text"-->
</LinearLayout>